<h1>List of Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
            task_path(task),
            method:'DELETE',
            data: { confirm: "Are you sure?" } %>

    </li>

  <% end %>
</ul>


<p><%= link_to 'add a new task', tasks_new_path %></p>
